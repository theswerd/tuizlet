{
  "name": "tuizlet",
  "version": "0.1.0",
  "description": "A terminal-based flashcard quiz experience powered by AI",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "flashcards",
    "quiz",
    "learning",
    "cli",
    "terminal",
    "tui",
    "study"
  ],
  "bin": {
    "tuizlet": "./bin/tuizlet.js"
  },
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --compile --minify --outfile dist/tuizlet-${npm_config_target:-$(uname -s | tr A-Z a-z)-$(uname -m | sed 's/arm64/arm64/;s/x86_64/x64/')}",
    "build:local": "bun build src/index.ts --compile --minify --outfile dist/tuizlet-darwin-arm64",
    "build:darwin-arm64": "bun build src/index.ts --compile --minify --target=bun-darwin-arm64 --outfile dist/tuizlet-darwin-arm64",
    "build:darwin-x64": "bun build src/index.ts --compile --minify --target=bun-darwin-x64 --outfile dist/tuizlet-darwin-x64",
    "build:linux-arm64": "bun build src/index.ts --compile --minify --target=bun-linux-arm64 --outfile dist/tuizlet-linux-arm64",
    "build:linux-x64": "bun build src/index.ts --compile --minify --target=bun-linux-x64 --outfile dist/tuizlet-linux-x64",
    "prepublishOnly": "bun run build:local"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.7",
    "@opentui/core": "^0.1.72",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
